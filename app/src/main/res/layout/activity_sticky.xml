<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StickyActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="subscribe / send sticky with tag"
        android:textAlignment="center"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="subscribeStringTag"
            android:text="subscribe string" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="sendStringTag"
            android:text="send String" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="sendManyStringTag"
            android:text="send many String" />


        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="DeleteStringTag"
            android:text="Delete String" />


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="subscribe / send sticky without tag"
        android:textAlignment="center"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="subscribeString"
            android:text="subscribe string" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="sendString"
            android:text="send String" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="sendManyString"
            android:text="send many String" />


        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="DeleteString"
            android:text="Delete String" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:onClick="UnSubscribeAll"
        android:text="UnSubscribe" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:onClick="finishPage"
        android:text="finish" />

</LinearLayout>
